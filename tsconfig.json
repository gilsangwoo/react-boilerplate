{
  "compilerOptions": {
//    "outDir": "output",
    "module": "es6",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": ["src"],
    "baseUrl": "./src",
    "strictNullChecks": true,
    //"strict": true,
    "forceConsistentCasingInFileNames": true, //파일명 대소분자 구분
    //"noImplicitReturns": true, //함수 값을 반환하지 안으면 오류
    "noImplicitThis": true,
    //"noImplicitAny": true, //any 타입 금지
    "allowSyntheticDefaultImports": true, // export default 를 export 한 값들을 가지는 객체로 설정
    "noUnusedLocals": true, //사용하지 않는 로컬 변수 에러
    //"declaration": true,
    //"declarationDir": "src/@types", //이거 선언하면 ts 연결 된 모든 파일 declare 생성
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "pretty": true
  },
  "include": ["src/**/*", ".eslintrc.js"],
  "exclude": ["node_modules", "build"]
}